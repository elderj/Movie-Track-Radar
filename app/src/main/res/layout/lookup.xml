<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main"
    android:background="#0C5866">

    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/browse"
        android:textSize="25dip"
        android:gravity="center"
        android:id="@+id/textView2"
        android:textColor="#E1B450"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button android:id="@+id/btnClose"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Close"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#373121"
        android:textColor="#E1B450" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/userinputTitle"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp"
        android:layout_toStartOf="@+id/goButton"
        android:hint="title"
        android:background="#337C8A"
        android:textColor="#CC1A07"
        android:layout_toLeftOf="@+id/goButton" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="GO"
        android:id="@+id/goButton"
        android:background="#A61E10"
        android:textColor="#E1B450"
        android:layout_alignBottom="@+id/userinputTitle"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary:   "
        android:id="@+id/textView3"
        android:textSize="22dp"
        android:textColor="#E1B450"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/toggleButton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ToggleButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:textOff="Short"
        android:textOn="Long"
        android:background="#A61E10"
        android:textColor="#E1B450"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type:   "
        android:id="@+id/textView5"
        android:textSize="22dp"
        android:textColor="#E1B450"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <ToggleButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton2"
        android:textOff="Movie"
        android:textOn="TV"
        android:background="#A61E10"
        android:textColor="#E1B450"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/toggleButton"
        android:layout_alignStart="@+id/toggleButton" />

</RelativeLayout>



